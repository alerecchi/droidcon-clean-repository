<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:buttonStyle">@style/ButtonStyle</item>
        <item name="android:fontFamily">@font/lato_regular</item>
        <item name="android:textColor">@color/textColor</item>
    </style>

    <style name="ButtonStyle" parent="Base.Widget.AppCompat.Button.Colored">
        <item name="android:background">@drawable/round_button_state_background</item>
        <item name="android:fontFamily">@font/font_lato_bold</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

</resources>
